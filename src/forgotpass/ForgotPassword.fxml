<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<ScrollPane prefHeight="600.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="forgotpass.ForgotPasswordController">
   <content>
      <AnchorPane prefHeight="600.0" prefWidth="450.0">
         <children>
            <FontAwesomeIconView glyphName="ARROW_LEFT" layoutX="24.0" layoutY="41.0" onMouseClicked="#backToLogin" size="20" />
            <Label layoutX="104.0" layoutY="44.0" text="Forgot Password">
               <font>
                  <Font name="Impact" size="35.0" />
               </font>
            </Label>
            <Label layoutX="104.0" layoutY="88.0" text="Recover your password here">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <TextField fx:id="accountno" layoutX="74.0" layoutY="182.0" prefHeight="38.0" prefWidth="340.0" promptText="Your Account No" styleClass="field-decoration" stylesheets="@../design/design.css">
               <font>
                  <Font size="18.0" />
               </font>
            </TextField>
            <TextField fx:id="ans" layoutX="74.0" layoutY="304.0" prefHeight="38.0" prefWidth="340.0" promptText="Answer" styleClass="field-decoration" stylesheets="@../design/design.css">
               <font>
                  <Font size="18.0" />
               </font>
            </TextField>
            <FontAwesomeIconView glyphName="CLOSE" layoutX="414.0" layoutY="40.0" onMouseClicked="#closeApp" size="20" />
            <ComboBox fx:id="sq" layoutX="74.0" layoutY="242.0" prefHeight="38.0" prefWidth="340.0" promptText="Security Question" styleClass="field-decoration" stylesheets="@../design/design.css" />
            <Button layoutX="123.0" layoutY="386.0" mnemonicParsing="false" onMouseClicked="#recoverPassword" prefHeight="35.0" prefWidth="200.0" styleClass="login-button" stylesheets="@../design/design.css" text="Recover Password">
               <font>
                  <Font name="Times New Roman Bold" size="18.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </content>
</ScrollPane>
